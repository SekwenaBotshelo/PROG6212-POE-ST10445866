<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        .dark-mode {
            background-color: #1a1a1a;
            color: #ffffff;
        }

            .dark-mode .navbar {
                background-color: #2d2d2d !important;
                border-bottom: 1px solid #444;
            }

            .dark-mode .card {
                background-color: #2d2d2d;
                border-color: #444;
            }

            .dark-mode .table {
                color: #ffffff;
            }

            .dark-mode .table-striped > tbody > tr:nth-of-type(odd) {
                background-color: #3a3a3a;
            }

            .dark-mode .form-control {
                background-color: #2d2d2d;
                border-color: #555;
                color: #ffffff;
            }

                .dark-mode .form-control:focus {
                    background-color: #2d2d2d;
                    border-color: #007bff;
                    color: #ffffff;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-journal-text"></i> Contract Monthly Claim System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>

                        <!-- Show these only when user is logged in -->
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="@Context.Session.GetString("UserRole")"
                                   asp-action="Dashboard">
                                    <i class="bi bi-speedometer2"></i> Dashboard
                                </a>
                            </li>

                            <!-- Show user info -->
                            <li class="nav-item">
                                <span class="nav-link text-dark">
                                    <i class="bi bi-person-circle"></i>
                                    @Context.Session.GetString("UserName")
                                    <small class="text-muted">(@Context.Session.GetString("UserRole"))</small>
                                </span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- Show these links when not logged in -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Lecturer" asp-action="Dashboard">
                                    <i class="bi bi-person"></i> Lecturer
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Coordinator" asp-action="Dashboard">
                                    <i class="bi bi-clipboard-check"></i> Coordinator
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Manager" asp-action="Dashboard">
                                    <i class="bi bi-graph-up"></i> Manager
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="HR" asp-action="Dashboard">
                                    <i class="bi bi-people"></i> HR
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check"></i> Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- Search Form - Only show when logged in -->
                    @if (Context.Session.GetString("UserId") != null)
                    {
                        <form id="dashboardSearchForm" class="d-flex me-2" method="get" asp-controller="Home" asp-action="DashboardSearch">
                            <input id="dashboardSearch" class="form-control me-1" type="search" placeholder="Search Dashboard..." aria-label="Search" name="dashboard" />
                            <button id="searchBtn" class="btn btn-outline-primary" type="submit">
                                <i class="bi bi-search"></i> Go
                            </button>
                        </form>
                    }

                    <!-- Dark/Light Mode Toggle -->
                    <button id="themeToggle" class="btn btn-outline-secondary ms-2">
                        <i class="bi bi-moon"></i>
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <div class="container d-flex flex-column min-vh-100">
        <main role="main" class="flex-grow-1 pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - Contract Monthly Claim System - ST10445866 - Botshelo Koketso Sekwena
            | <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Dark/Light Mode Toggle
        const themeToggle = document.getElementById("themeToggle");
        const body = document.body;

        // Load saved theme on page load
        const savedTheme = localStorage.getItem("theme");
        if (savedTheme === "dark") {
            body.classList.add("dark-mode");
            themeToggle.innerHTML = '<i class="bi bi-sun"></i>';
        } else {
            themeToggle.innerHTML = '<i class="bi bi-moon"></i>';
        }

        // Toggle dark/light mode
        themeToggle.addEventListener("click", () => {
            body.classList.toggle("dark-mode");
            if (body.classList.contains("dark-mode")) {
                localStorage.setItem("theme", "dark");
                themeToggle.innerHTML = '<i class="bi bi-sun"></i>';
            } else {
                localStorage.setItem("theme", "light");
                themeToggle.innerHTML = '<i class="bi bi-moon"></i>';
            }
        });

        // Dashboard search handling
        const dashboardSearchForm = document.getElementById("dashboardSearchForm");
        if (dashboardSearchForm) {
            dashboardSearchForm.addEventListener("submit", function(e) {
                e.preventDefault();
                const query = document.getElementById("dashboardSearch").value.trim().toLowerCase();
                if (!query) return; // do nothing if empty

                if (query.includes("lecturer")) {
                    window.location.href = '/Lecturer/Dashboard';
                } else if (query.includes("coordinator") || query.includes("programme coordinator")) {
                    window.location.href = '/Coordinator/Dashboard';
                } else if (query.includes("manager") || query.includes("academic manager")) {
                    window.location.href = '/Manager/Dashboard';
                } else if (query.includes("hr") || query.includes("human resources")) {
                    window.location.href = '/HR/Dashboard';
                } else {
                    // Fallback to home with search error
                    window.location.href = '/Home/Index?searchError=' + encodeURIComponent('No matching dashboard found for "' + query + '"');
                }
            });
        }

        // Handle search errors from URL parameters
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const searchError = urlParams.get('searchError');
            if (searchError) {
                // You can display the search error in a toast or alert
                console.log('Search error:', searchError);
                // Optionally show a Bootstrap toast or alert here
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>