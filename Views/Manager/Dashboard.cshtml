@model IEnumerable<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    @if (ViewBag.CurrentUser != null)
    {
        <div class="alert alert-info">
            Welcome, <strong>@ViewBag.CurrentUser.FullName</strong>
        </div>
    }

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card text-center bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Claims Pending Approval</h5>
                    <p class="card-text display-6">@ViewBag.PendingApprovalCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Claims Approved</h5>
                    <p class="card-text display-6">@ViewBag.ApprovedCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center bg-secondary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Claims</h5>
                    <p class="card-text display-6">@ViewBag.TotalClaims</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <!-- Claims Table -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="card-title mb-0">Claims Pending Approval</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Month</th>
                            <th>Total Hours</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Verified Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.SafeLecturerName</td> <!-- FIXED -->
                                    <td>@claim.Month</td>
                                    <td>@claim.TotalHours</td>
                                    <td>R @claim.TotalAmount.ToString("F2")</td>
                                    <td><span class="badge bg-info">@claim.Status</span></td>
                                    <td>@claim.VerifiedDate?.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <a asp-action="ViewClaimDetails" asp-route-id="@claim.ClaimId"
                                           class="btn btn-sm btn-info">Review</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted">No claims pending approval.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Reports" class="btn btn-primary">View Reports</a>
    </div>
</div>