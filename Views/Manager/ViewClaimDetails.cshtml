@model PROG6212_POE.Models.Claim
@{
    ViewData["Title"] = "Manager Claim Details";
}

<div class="container mt-4">
    <h2>Claim Details - ID: @Model.ClaimId</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Claim Information</h5>
                    <p><strong>Claim ID:</strong> @Model.ClaimId</p>
                    <p><strong>Lecturer:</strong> @Model.SafeLecturerName</p>
                    <p><strong>Email:</strong> @Model.SafeLecturerEmail</p>
                    <p><strong>Hourly Rate:</strong> R @Model.StoredHourlyRate.ToString("F2")</p>
                    <p><strong>Verified By:</strong> @(Model.VerifiedByCoordinator?.FullName ?? "Not Verified")</p>
                    <p><strong>Verified Date:</strong> @Model.VerifiedDate?.ToString("yyyy-MM-dd")</p>
                </div>
                <div class="col-md-6">
                    <h5>Claim Details</h5>
                    <p><strong>Month:</strong> @Model.Month</p>
                    <p><strong>Hours Worked:</strong> @Model.TotalHours</p>
                    <p><strong>Total Amount:</strong> R @Model.TotalAmount.ToString("F2")</p>
                    <p><strong>Status:</strong> <span class="badge bg-info">@Model.Status</span></p>
                    <p><strong>Submitted Date:</strong> @Model.SubmittedDate.ToString("yyyy-MM-dd")</p>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="mt-3">
                    <h5>Additional Notes</h5>
                    <p class="text-muted">@Model.Notes</p>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.DocumentOriginalName))
            {
                <div class="mt-3">
                    <h5>Supporting Document</h5>
                    <p>
                        <i class="bi bi-file-earmark"></i>
                        @Model.DocumentOriginalName
                        <a href="/uploads/@Model.DocumentPath" target="_blank" class="btn btn-sm btn-outline-primary ms-2">
                            View Document
                        </a>
                    </p>
                </div>
            }

            <div class="mt-4">
                <form asp-action="ApproveClaim" method="post" class="d-inline" id="approveForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="claimId" value="@Model.ClaimId" />
                    <button type="button" onclick="confirmApprove()" class="btn btn-success">Approve Claim</button>
                </form>

                <form asp-action="RejectClaim" method="post" class="d-inline" id="rejectForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="claimId" value="@Model.ClaimId" />
                    <button type="button" onclick="confirmReject()" class="btn btn-danger">Reject Claim</button>
                </form>

                <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmApprove() {
            Swal.fire({
                title: 'Approve Claim?',
                html: `
                    <div class="text-left">
                        <p><strong>Claim ID:</strong> #@Model.ClaimId</p>
                        <p><strong>Lecturer:</strong> @Model.SafeLecturerName</p>
                        <p><strong>Amount:</strong> R @Model.TotalAmount.ToString("F2")</p>
                        <p class="text-muted">This will approve the claim for payment.</p>
                    </div>
                `,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, Approve!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('approveForm').submit();
                }
            });
        }

        function confirmReject() {
            Swal.fire({
                title: 'Reject Claim?',
                text: 'Are you sure you want to reject this claim? This action cannot be undone!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, Reject!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('rejectForm').submit();
                }
            });
        }
    </script>
}