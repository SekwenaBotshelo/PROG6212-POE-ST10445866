@model List<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Monthly Claims Report";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - University Claims System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            margin: 0;
            padding: 20px;
            background: white;
        }

        .report-header {
            border-bottom: 3px solid #2c3e50;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .table th {
            border-top: none;
            font-weight: 600;
        }

        .card {
            border: 1px solid #dee2e6;
        }

        .card-header {
            border-bottom: 2px solid rgba(0,0,0,0.1);
        }

        /* Print-specific styles */
        @@media print {
            .no-print {
                display: none !important;
            }

            body {
                padding: 0;
                margin: 0;
                font-size: 12px;
            }

            .container {
                max-width: 100%;
                padding: 0;
            }

            .card {
                border: 1px solid #000 !important;
                box-shadow: none !important;
            }

            .table {
                font-size: 10px;
            }

            .btn {
                display: none !important;
            }
            /* Ensure proper page breaks */
            .page-break {
                page-break-before: always;
            }
            /* Improve print appearance */
            .bg-primary, .bg-secondary, .bg-success {
                color: white !important;
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }

            .table-dark {
                background: #000 !important;
                color: white !important;
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }

            .table-success {
                background: #d4edda !important;
                color: #155724 !important;
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
        }

        /* Screen-only styles */
        @@media screen {
            .print-only {
                display: none;
            }

            .container {
                max-width: 1200px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Report Header -->
        <div class="report-header text-center mb-4 p-4 bg-light rounded">
            <h1 class="display-4 text-primary mb-2">University of Technology</h1>
            <h2 class="text-dark mb-3">Monthly Claims Analysis Report</h2>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="d-flex justify-content-between text-muted">
                        <div><strong>Generated By:</strong> @ViewBag.CurrentUser?.FullName</div>
                        <div><strong>Report Date:</strong> @DateTime.Now.ToString("dd MMMM yyyy")</div>
                        <div><strong>Period:</strong> @DateTime.Now.ToString("MMMM yyyy")</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Executive Summary Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card border-success shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="text-success mb-2">
                            <i class="bi bi-currency-dollar fs-1"></i>
                        </div>
                        <h5 class="card-title text-muted">Total Approved Amount</h5>
                        <h2 class="card-text text-success">R @ViewBag.TotalApprovedAmount?.ToString("F2")</h2>
                        <small class="text-muted">All Time</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-primary shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="text-primary mb-2">
                            <i class="bi bi-file-text fs-1"></i>
                        </div>
                        <h5 class="card-title text-muted">Approved Claims</h5>
                        <h2 class="card-text text-primary">@ViewBag.TotalApprovedClaims</h2>
                        <small class="text-muted">Total Count</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-warning shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="text-warning mb-2">
                            <i class="bi bi-graph-up fs-1"></i>
                        </div>
                        <h5 class="card-title text-muted">Average per Claim</h5>
                        <h2 class="card-text text-warning">
                            R @((ViewBag.TotalApprovedClaims > 0 ? (ViewBag.TotalApprovedAmount / ViewBag.TotalApprovedClaims) : 0)?.ToString("F2"))
                        </h2>
                        <small class="text-muted">Mean Value</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Monthly Breakdown -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-calendar-month"></i> Monthly Claims Breakdown
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Month</th>
                                <th>Number of Claims</th>
                                <th class="text-end">Total Amount</th>
                                <th class="text-end">Average per Claim</th>
                                <th class="text-end">% of Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.MonthlySummary != null)
                            {
                                var totalAllAmount = ViewBag.TotalApprovedAmount ?? 0;
                                foreach (var item in ViewBag.MonthlySummary)
                                {
                                    <tr>
                                        <td class="fw-bold">@item.Month</td>
                                        <td>@item.ClaimCount</td>
                                        <td class="text-end fw-bold">R @item.TotalAmount.ToString("F2")</td>
                                        <td class="text-end">R @item.AverageAmount.ToString("F2")</td>
                                        <td class="text-end text-muted">@((totalAllAmount > 0 ? (item.TotalAmount / totalAllAmount * 100) : 0).ToString("F1"))%</td>
                                    </tr>
                                }
                                <tr class="table-success">
                                    <td class="fw-bold">GRAND TOTAL</td>
                                    <td class="fw-bold">@ViewBag.TotalApprovedClaims</td>
                                    <td class="text-end fw-bold">R @ViewBag.TotalApprovedAmount?.ToString("F2")</td>
                                    <td class="text-end fw-bold">
                                        R @((ViewBag.TotalApprovedClaims > 0 ? (ViewBag.TotalApprovedAmount / ViewBag.TotalApprovedClaims) : 0)?.ToString("F2"))
                                    </td>
                                    <td class="text-end fw-bold">100%</td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                        No report data available
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Detailed Claims Listing -->
        <div class="card shadow-sm">
            <div class="card-header bg-secondary text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-check"></i> Detailed Approved Claims
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Month</th>
                                <th class="text-end">Hours</th>
                                <th class="text-end">Hourly Rate</th>
                                <th class="text-end">Total Amount</th>
                                <th>Approved Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var claim in Model)
                                {
                                    <tr>
                                        <td class="fw-bold">#@claim.ClaimId</td>
                                        <td>@claim.SafeLecturerName</td>
                                        <td>@claim.Month</td>
                                        <td class="text-end">@claim.TotalHours.ToString("F1")</td>
                                        <td class="text-end">R @claim.StoredHourlyRate.ToString("F2")</td>
                                        <td class="text-end fw-bold text-success">R @claim.TotalAmount.ToString("F2")</td>
                                        <td>@claim.ApprovedDate?.ToString("dd MMM yyyy")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">
                                        <i class="bi bi-file-earmark-excel fs-1 d-block mb-2"></i>
                                        No approved claims found
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Report Footer -->
        <div class="mt-4 p-3 bg-light rounded text-center">
            <small class="text-muted">
                University Claims Management System - Confidential Report<br>
                Generated on: @DateTime.Now.ToString("dddd, dd MMMM yyyy 'at' HH:mm:ss")
            </small>
            <div class="print-only">
                <small>Page 1 of 1</small>
            </div>
        </div>

        <!-- Action Buttons - Hidden when printing -->
        <div class="mt-4 text-center no-print">
            <button class="btn btn-primary btn-lg me-2" onclick="window.print()">
                <i class="bi bi-printer"></i> Print Report
            </button>
            <a asp-action="Dashboard" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <script>
        // Optional: Add page break logic for longer reports
        function addPageBreaks() {
            const tables = document.querySelectorAll('table');
            tables.forEach((table, index) => {
                if (index > 0) {
                    table.classList.add('page-break');
                }
            });
        }

        // Call this before printing if needed
        window.onbeforeprint = addPageBreaks;
    </script>
</body>
</html>