@model IEnumerable<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Lecturer Dashboard</h1>

    <!-- Welcome Message -->
    @if (ViewBag.CurrentUser != null)
    {
        <div class="alert alert-info">
            Welcome, <strong>@ViewBag.CurrentUser.FullName</strong>!
            Your hourly rate is <strong>R @ViewBag.CurrentUser.HourlyRate</strong>.
        </div>
    }

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }

    <!-- Buttons -->
    <div class="d-flex justify-content-center mb-4">
        <a asp-action="SubmitClaim" class="btn btn-success me-2">
            <i class="bi bi-plus-circle"></i> Submit New Claim
        </a>
        <a asp-action="UploadDocuments" class="btn btn-primary me-2">
            <i class="bi bi-upload"></i> Upload Supporting Documents
        </a>
        <a asp-action="TrackClaims" class="btn btn-secondary">
            <i class="bi bi-card-list"></i> View Submitted Claims
        </a>
    </div>

    <!-- Claims Table -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Submitted Claims</h5>
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Month</th>
                            <th>Total Hours</th>
                            <th>Hourly Rate</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Document</th>
                            <th>Submitted Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.Month</td>
                                    <td>@claim.TotalHours</td>
                                    <td>R @claim.StoredHourlyRate.ToString("F2")</td>
                                    <td>R @claim.TotalAmount.ToString("F2")</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(claim.Status)">
                                            @claim.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.DocumentPath))
                                        {
                                            <a href="/uploads/@claim.DocumentPath" target="_blank" class="btn btn-success btn-sm">
                                                <i class="bi bi-file-earmark"></i> View Document
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="UploadDocumentForClaim" asp-route-claimId="@claim.ClaimId" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-upload"></i> Upload
                                            </a>
                                        }
                                    </td>
                                    <td>@claim.SubmittedDate.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted">No claims submitted yet.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Approved" => "bg-success",
            "Verified" => "bg-info",
            "Rejected" => "bg-danger",
            _ => "bg-warning" // Pending Verification
        };
    }
}