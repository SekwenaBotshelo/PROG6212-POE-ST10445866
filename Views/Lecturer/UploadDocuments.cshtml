@{
    ViewData["Title"] = "Upload Supporting Documents";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-upload"></i> Upload Supporting Documents
                    </h4>
                </div>
                <div class="card-body">
                    <!-- General upload -->
                    <div class="alert alert-info">
                        <h5>General Document Upload</h5>
                        <p class="mb-0">Upload supporting documents that are not linked to a specific claim.</p>
                    </div>

                    <!-- Success Message -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                        </div>
                    }

                    <!-- Error Message -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
                        </div>
                    }

                    <!-- Upload Form -->
                    <form asp-action="UploadDocuments" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="supportingFile" class="form-label fw-bold">
                                Supporting Document *
                            </label>
                            <input type="file" class="form-control" id="supportingFile"
                                   name="supportingFile" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx" required />
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i> Allowed file types: PDF, Word documents (.doc, .docx), Images (.jpg, .jpeg, .png). Maximum file size: 10MB.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="documentDescription" class="form-label fw-bold">
                                Document Description *
                            </label>
                            <textarea class="form-control" id="documentDescription" name="documentDescription"
                                      rows="3" placeholder="Briefly describe what this document shows..." required></textarea>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i> Description is required for general documents to identify their purpose.
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Dashboard" class="btn btn-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Back to Dashboard
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-upload"></i> Upload Document
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>