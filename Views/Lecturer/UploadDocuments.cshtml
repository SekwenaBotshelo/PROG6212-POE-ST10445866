@{
}
@{
    ViewData["Title"] = "Upload Supporting Document";
}

<div class="container mt-4">
    <h2>Upload Supporting Document</h2>

    <div class="card">
        <div class="card-body">
            <form asp-action="UploadDocuments" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label for="supportingFile" class="form-label">Select File (PDF, JPG, JPEG, PNG, DOC, DOCX)</label>
                    <input type="file" id="supportingFile" name="supportingFile" class="form-control"
                           accept=".pdf,.jpg,.jpeg,.png,.doc,.docx" />
                    <small class="form-text text-muted">Maximum file size: 10MB</small>
                </div>

                <button type="submit" class="btn btn-primary">Upload Document</button>
                <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
            </form>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
    }
</div>