@model List<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Track Your Claims";
}

<div class="container mt-4">
    <h1 class="mb-4">Track Your Claims</h1>

    @if (ViewBag.CurrentUser != null)
    {
        <div class="alert alert-info">
            Tracking claims for <strong>@ViewBag.CurrentUser.FullName</strong>
        </div>
    }

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Month</th>
                            <th>Total Hours</th>
                            <th>Hourly Rate</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                            <th>Document</th>
                            <th>Submitted Date</th>
                            <th>Last Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.Month</td>
                                    <td>@claim.TotalHours</td>
                                    <td>R @claim.StoredHourlyRate.ToString("F2")</td>
                                    <td>R @claim.TotalAmount.ToString("F2")</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(claim.Status)">
                                            @claim.Status
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.DocumentPath))
                                        {
                                            <a href="/uploads/@claim.DocumentPath" target="_blank" class="btn btn-success btn-sm">
                                                <i class="bi bi-file-earmark"></i> View
                                            </a>
                                        }
                                        else
                                        {
                                            <!-- Using UploadDocumentForClaim to match Dashboard -->
                                            <a asp-action="UploadDocumentForClaim" asp-route-claimId="@claim.ClaimId" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-upload"></i> Upload
                                            </a>
                                        }
                                    </td>
                                    <td>@claim.SubmittedDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @{
                                            var lastUpdate = claim.ApprovedDate ?? claim.VerifiedDate ?? claim.SubmittedDate;
                                        }
                                        @lastUpdate.ToString("yyyy-MM-dd")
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted">No claims found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Approved" => "bg-success",
            "Verified" => "bg-info",
            "Rejected" => "bg-danger",
            _ => "bg-warning"
        };
    }
}