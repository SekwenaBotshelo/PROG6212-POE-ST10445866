@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="bi bi-person-circle"></i> Login to CMCS</h3>
                </div>
                <div class="card-body">
                    <!-- Success Message -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }

                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email"
                                   placeholder="Enter your email" required>
                        </div>

                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password"
                                   placeholder="Enter your password" required>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>

                    <!-- Display validation errors -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3">
                            @Html.ValidationSummary()
                        </div>
                    }

                    <!-- Test Users Info -->
                    <div class="mt-4 p-3 bg-light rounded">
                        <h6 class="mb-2">Test Users:</h6>
                        <small class="text-muted">
                            <strong>HR:</strong> hr@university.com / password123<br>
                            <strong>Lecturer:</strong> lecturer@university.com / password123<br>
                            <strong>Coordinator:</strong> coordinator@university.com / password123<br>
                            <strong>Manager:</strong> manager@university.com / password123
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>