@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-lg">
                <div class="card-body py-5">
                    <i class="bi bi-shield-exclamation text-danger" style="font-size: 4rem;"></i>
                    <h1 class="text-danger mt-4">Access Denied</h1>
                    <p class="lead">You don't have permission to access this page.</p>
                    <p class="text-muted">Please log in with the appropriate credentials.</p>

                    <div class="mt-4">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary me-2">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-house"></i> Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>