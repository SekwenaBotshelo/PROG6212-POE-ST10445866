@model IEnumerable<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Verify Claims";
}

<div class="container mt-4">
    <h2>Verify Pending Claims</h2>

    @if (ViewBag.CurrentUser != null)
    {
        <div class="alert alert-info">
            You are verifying claims as: <strong>@ViewBag.CurrentUser.FullName</strong>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Month</th>
                            <th>Hours</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.SafeLecturerName</td> <!-- FIXED -->
                                    <td>@claim.Month</td>
                                    <td>@claim.TotalHours</td>
                                    <td>R @claim.TotalAmount.ToString("F2")</td>
                                    <td><span class="badge bg-warning">@claim.Status</span></td>
                                    <td>
                                        <a href="/Coordinator/ViewClaimDetails/@claim.ClaimId" class="btn btn-info btn-sm">View Details</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">No claims pending verification.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>