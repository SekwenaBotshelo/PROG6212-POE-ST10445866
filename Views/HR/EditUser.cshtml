@model PROG6212_POE.Models.User
@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0"><i class="bi bi-pencil"></i> Edit User: @Model.FullName</h5>
        </div>
        <div class="card-body">
            <form asp-action="EditUser" method="post" id="userForm">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="UserId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">First Name *</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Surname" class="form-label">Last Name *</label>
                            <input asp-for="Surname" class="form-control" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email Address *</label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Role" class="form-label">User Role *</label>
                    <select asp-for="Role" class="form-control" id="roleSelect">
                        <option value="HR">HR Manager</option>
                        <option value="Lecturer">Lecturer</option>
                        <option value="Coordinator">Programme Coordinator</option>
                        <option value="Manager">Academic Manager</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="form-group mb-3" id="hourlyRateGroup">
                    <label asp-for="HourlyRate" class="form-label">Hourly Rate (R) *</label>
                    <input asp-for="HourlyRate" class="form-control" type="number" min="100" max="1000" />
                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">Password *</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <small class="form-text text-muted">Update the user's password</small>
                </div>

                <div class="form-group">
                    <button type="button" onclick="confirmUpdate()" class="btn btn-warning">
                        <i class="bi bi-check-lg"></i> Update User
                    </button>
                    <a asp-action="Dashboard" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // Show/hide hourly rate based on current role
            function toggleHourlyRate() {
                if ($('#roleSelect').val() === 'Lecturer') {
                    $('#hourlyRateGroup').show();
                } else {
                    $('#hourlyRateGroup').hide();
                }
            }

            $('#roleSelect').change(toggleHourlyRate);
            toggleHourlyRate(); // Initial check
        });

        function confirmUpdate() {
            Swal.fire({
                title: 'Update User?',
                text: 'Are you sure you want to update this user profile?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, Update!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('userForm').submit();
                }
            });
        }
    </script>
}