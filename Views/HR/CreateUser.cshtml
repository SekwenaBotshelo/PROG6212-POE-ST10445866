@model PROG6212_POE.Models.User
@{
    ViewData["Title"] = "Create User";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0"><i class="bi bi-person-plus"></i> Add New System User</h5>
        </div>
        <div class="card-body">
            <form asp-action="CreateUser" method="post" id="userForm">
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">First Name *</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Surname" class="form-label">Last Name *</label>
                            <input asp-for="Surname" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email Address *</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Role" class="form-label">User Role *</label>
                    <select asp-for="Role" class="form-control" id="roleSelect">
                        <option value="">Select a role</option>
                        <option value="HR">HR Manager</option>
                        <option value="Lecturer">Lecturer</option>
                        <option value="Coordinator">Programme Coordinator</option>
                        <option value="Manager">Academic Manager</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="form-group mb-3" id="hourlyRateGroup" style="display: none;">
                    <label asp-for="HourlyRate" class="form-label">Hourly Rate (R) *</label>
                    <input asp-for="HourlyRate" class="form-control" type="number" min="100" max="1000"
                           placeholder="Enter hourly rate between R100 - R1000" />
                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                    <small class="form-text text-muted">Only applicable for Lecturers</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">Password *</label>
                    <input asp-for="Password" class="form-control" type="password"
                           placeholder="Enter temporary password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <small class="form-text text-muted">User will use this password to login initially</small>
                </div>

                <div class="form-group">
                    <button type="button" onclick="confirmCreate()" class="btn btn-success">
                        <i class="bi bi-check-lg"></i> Create User
                    </button>
                    <a asp-action="Dashboard" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // Show/hide hourly rate based on role selection
            $('#roleSelect').change(function() {
                if ($(this).val() === 'Lecturer') {
                    $('#hourlyRateGroup').show();
                } else {
                    $('#hourlyRateGroup').hide();
                }
            });

            // Trigger change on page load in case of form validation errors
            $('#roleSelect').trigger('change');
        });

        function confirmCreate() {
            // Basic validation
            const name = document.querySelector('[name="Name"]').value;
            const surname = document.querySelector('[name="Surname"]').value;
            const email = document.querySelector('[name="Email"]').value;
            const role = document.querySelector('[name="Role"]').value;

            if (!name || !surname || !email || !role) {
                Swal.fire('Error', 'Please fill in all required fields.', 'error');
                return;
            }

            Swal.fire({
                title: 'Create New User?',
                html: `
                    <div class="text-left">
                        <p><strong>Name:</strong> ${name} ${surname}</p>
                        <p><strong>Email:</strong> ${email}</p>
                        <p><strong>Role:</strong> ${role}</p>
                        <p class="text-muted">Please confirm all user details are correct before creating.</p>
                    </div>
                `,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, Create User!',
                cancelButtonText: 'Review Details'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('userForm').submit();
                }
            });
        }
    </script>
}