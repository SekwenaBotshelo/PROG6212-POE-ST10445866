@model List<PROG6212_POE.Models.Claim>
@{
    ViewData["Title"] = "Generate Reports";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card text-center bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Approved Amount</h5>
                    <p class="card-text display-6">R @ViewBag.TotalApprovedAmount?.ToString("F2")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Approved Claims</h5>
                    <p class="card-text display-6">@ViewBag.TotalApprovedClaims</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Report Period</h5>
                    <p class="card-text display-6">@DateTime.Now.ToString("MMMM yyyy")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Monthly Report -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0"><i class="bi bi-graph-up"></i> Monthly Summary</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Month</th>
                            <th>Number of Claims</th>
                            <th>Total Amount</th>
                            <th>Average per Claim</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.MonthlyReport != null)
                        {
                            foreach (var item in ViewBag.MonthlyReport)
                            {
                                <tr>
                                    <td>@item.Month</td>
                                    <td>@item.ClaimCount</td>
                                    <td>R @item.TotalAmount.ToString("F2")</td>
                                    <td>R @((item.TotalAmount / item.ClaimCount).ToString("F2"))</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">No report data available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Approved Claims Details -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0"><i class="bi bi-list-check"></i> Approved Claims Details</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Month</th>
                            <th>Hours</th>
                            <th>Amount</th>
                            <th>Approved Date</th>
                            <th>Approved By</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.Lecturer.FullName</td>
                                    <td>@claim.Month</td>
                                    <td>@claim.TotalHours</td>
                                    <td>R @claim.TotalAmount.ToString("F2")</td>
                                    <td>@claim.ApprovedDate?.ToString("yyyy-MM-dd")</td>
                                    <td>@(claim.ApprovedByManager?.FullName ?? "System")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">No approved claims found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Report Actions -->
    <div class="mt-4">
        <button class="btn btn-primary me-2" onclick="window.print()">
            <i class="bi bi-printer"></i> Print Report
        </button>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>