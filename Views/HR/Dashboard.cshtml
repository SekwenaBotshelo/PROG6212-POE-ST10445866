@model List<PROG6212_POE.Models.User>
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <!-- Welcome Message -->
    @if (ViewBag.CurrentUser != null)
    {
        <div class="alert alert-info">
            <h5>Welcome, <strong>@ViewBag.CurrentUser.FullName</strong>!</h5>
            <p class="mb-0">You have full system administrator privileges.</p>
        </div>
    }

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <!-- Error Message -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card text-center bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="card-text display-6">@ViewBag.UserCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Lecturers</h5>
                    <p class="card-text display-6">@ViewBag.LecturerCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Claims</h5>
                    <p class="card-text display-6">@ViewBag.TotalClaims</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Pending Claims</h5>
                    <p class="card-text display-6">@(ViewBag.TotalClaims - ViewBag.LecturerCount)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="mb-4">
        <a asp-action="CreateUser" class="btn btn-success me-2">
            <i class="bi bi-person-plus"></i> Create New User
        </a>
        <a asp-action="GenerateReports" class="btn btn-primary me-2">
            <i class="bi bi-graph-up"></i> Generate Reports
        </a>
        <a asp-action="ViewAllClaims" class="btn btn-secondary me-2">
            <i class="bi bi-list-check"></i> View All Claims
        </a>
    </div>

    <!-- Users Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0"><i class="bi bi-people"></i> User Management</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>User ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Hourly Rate</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.UserId</td>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        <span class="badge
                                                    @(user.Role == "HR" ? "bg-danger" :
                                                                                            user.Role == "Lecturer" ? "bg-success" :
                                                                                            user.Role == "Coordinator" ? "bg-info" : "bg-warning")">
                                    @user.DisplayRole
                                </span>
                            </td>
                            <td>
                                @if (user.Role == "Lecturer")
                                        {
                                            <text>R @user.HourlyRate</text>
                                        }
                                        else
                                        {
                                            <text>-</text>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="EditUser" asp-route-id="@user.UserId"
                                           class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">No users found. Create your first user above.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>